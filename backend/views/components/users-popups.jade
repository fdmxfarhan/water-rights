#users-length.hidden= users.length
-for(var i=0; i<users.length; i++){
    .popup.user-info(id="user-info-popup-#{i}")
        i.fa.fa-times.close-popup
        .user-info-view 
            .info-view 
                img.avatar(src="/img/avatar/10.png", alt="avatar")
                h1.name= users[i].fullname
                .item 
                    .name نام: 
                    .value= users[i].firstName
                .item 
                    .name نام خانوادگی: 
                    .value= users[i].lastName
                .item 
                    .name کد ملی: 
                    .value= users[i].idNumber
                .item 
                    .name شماره شناسنامه: 
                    .value= users[i].cardNumber
                .item 
                    .name تاریخ تولد: 
                    .value #{users[i].birthDate.year}/#{users[i].birthDate.month}/#{users[i].birthDate.day}
                .item 
                    .name آدرس: 
                    .value= users[i].address
                .item 
                    .name کد پستی: 
                    .value= users[i].postCode
                .item 
                    .name شماره تماس: 
                    .value(id="phone-#{i}")= users[i].phone
                .buttons
                    a.button(href="tel:#{users[i].phone}") 
                        i.fa.fa-phone
                    .button(id="sms-btn-#{i}")
                        i.fa.fa-envelope
                    a.button(href="#") 
                        i.fa.fa-pencil
            .user-content-view
                .state-view
                    .state(class="#{users[i].regStatusNum > 0 ? 'active' : ''}")
                        i.fa.fa-check 
                        .text ثبت درخواست
                    .line
                    .state(class="#{users[i].regStatusNum > 1 ? 'active' : ''}")
                        i.fa.fa-check 
                        .text بررسی وضعیت شارژ و اعتبار بهره‌برداران
                    .line
                    .state(class="#{users[i].regStatusNum > 2 ? 'active' : ''}")
                        i.fa.fa-check 
                        .text بررسی وضعیت فنی پرونده چاه
                    .line
                    .state(class="#{users[i].regStatusNum > 3 ? 'active' : ''}")
                        i.fa.fa-check 
                        .text اصلاح نام پرونده
                    .line
                    .state(class="#{users[i].regStatusNum > 4 ? 'active' : ''}")
                        i.fa.fa-check 
                        .text تعهد نامه نمایندگی در فروش
                .state-view(class="#{users[i].regStatusNum != 0 ? 'hidden': ''}" id="state-0-view-#{i}")
                    include reg-state-0
                .state-view(class="#{users[i].regStatusNum != 1 ? 'hidden': ''}" id="state-1-view-#{i}")
                    include reg-state-1
                
-}
-if(userIndex){
    script.
        $('#user-info-popup-#{userIndex}').show();
        $('.black-modal').show();
-}