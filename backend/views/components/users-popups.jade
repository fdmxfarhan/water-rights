#users-length.hidden= users.length
-for(var i=0; i<users.length; i++){
    .popup.user-info(id="user-info-popup-#{i}")
        i.fa.fa-times.close-popup
        .user-info-view 
            .info-view 
                img.avatar(src="/img/avatar/10.png", alt="avatar")
                h1.name= users[i].fullname
                .item 
                    .name نام: 
                    .value= users[i].firstName
                .item 
                    .name نام خانوادگی: 
                    .value= users[i].lastName
                .item 
                    .name کد ملی: 
                    .value= users[i].idNumber
                .item 
                    .name شماره شناسنامه: 
                    .value= users[i].cardNumber
                .item 
                    .name تاریخ تولد: 
                    .value #{users[i].birthDate.year}/#{users[i].birthDate.month}/#{users[i].birthDate.day}
                .item 
                    .name آدرس: 
                    .value= users[i].address
                .item 
                    .name کد پستی: 
                    .value= users[i].postCode
                .item 
                    .name شماره تماس: 
                    .value(id="phone-#{i}")= users[i].phone
                .buttons
                    a.button(href="tel:#{users[i].phone}") 
                        i.fa.fa-phone
                    .button(id="sms-btn-#{i}")
                        i.fa.fa-envelope
                    a.button(href="/dashboard/user-view?userID=#{users[i]._id}") 
                        i.fa.fa-pencil
            .user-content-view
                .state-view.view1
                    .space
                    .state(class="#{users[i].regStatusNum > 0 ? 'active' : ''} #{users[i].regStatusNum == 0 ? 'selected' : ''}" id="state-1-select-#{i}")
                        i.fa.fa-check 
                        .text ثبت درخواست
                        .person کارشناس تشکل آب‌بران
                    .line
                    .state(class="#{users[i].regStatusNum > 1 ? 'active' : ''} #{users[i].regStatusNum == 1 ? 'selected' : ''}" id="state-2-select-#{i}")
                        i.fa.fa-check 
                        .text بررسی وضعیت شارژ و اعتبار بهره‌برداران
                        .person کارشناس آب منطقه‌ای
                    .line
                    .state(class="#{users[i].regStatusNum > 2 ? 'active' : ''} #{users[i].regStatusNum == 2 ? 'selected' : ''}" id="state-3-select-#{i}")
                        i.fa.fa-check 
                        .text بررسی وضعیت فنی پرونده چاه
                        .person اداره آب منطقه‌ای و تشکل آب بران
                    .line
                    .state(class="#{users[i].regStatusNum > 3 ? 'active' : ''} #{users[i].regStatusNum == 3 ? 'selected' : ''}" id="state-4-select-#{i}")
                        i.fa.fa-check 
                        .text اصلاح نام پرونده
                        .person کارشناس آب منطقه‌ای
                    .line
                    .state(class="#{users[i].regStatusNum > 4 ? 'active' : ''} #{users[i].regStatusNum == 4 ? 'selected' : ''}" id="state-5-select-#{i}")
                        i.fa.fa-check 
                        .text تعهد نامه نمایندگی در فروش
                        .person کارشناس کارگزار
                    .line
                    .state(class="#{users[i].regStatusNum > 5 ? 'active' : ''} #{users[i].regStatusNum == 5 ? 'selected' : ''}" id="state-6-select-#{i}")
                        i.fa.fa-check 
                        .text بررسی وضعیت نهایی شارژ و صدور فرم‌ها
                        .person کارشناس کارگزار
                                    
                .state-view(class="#{users[i].regStatusNum != 0 ? 'hidden': ''}" id="state-1-view-#{i}")
                    include reg-state-0
                .state-view(class="#{users[i].regStatusNum != 1 ? 'hidden': ''}" id="state-2-view-#{i}")
                    include reg-state-1
                .state-view(class="#{users[i].regStatusNum != 2 ? 'hidden': ''}" id="state-3-view-#{i}")
                    include reg-state-2
                .state-view(class="#{users[i].regStatusNum != 3 ? 'hidden': ''}" id="state-4-view-#{i}")
                    include reg-state-3
                .state-view(class="#{users[i].regStatusNum != 4 ? 'hidden': ''}" id="state-5-view-#{i}")
                    include reg-state-4
                .state-view(class="#{users[i].regStatusNum != 5 ? 'hidden': ''}" id="state-6-view-#{i}")
                    include reg-state-5
                .state-view(class="#{users[i].regStatusNum != 6 ? 'hidden': ''}" id="state-7-view-#{i}")
                    include reg-state-6
                
-}
-if(userIndex){
    script.
        $('#user-info-popup-#{userIndex}').show();
        $('.black-modal').show();
-}