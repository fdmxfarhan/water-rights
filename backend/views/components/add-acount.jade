.popup#add-chah-popup
    i.fa.fa-times.close-popup
    h1.popup-title افزودن حساب چاه
    form(action="/upload/add-chah" enctype="multipart/form-data" method="POST") 
        input.hidden(type="text" name="userID" value="#{viewingUser._id}")
        .middle-col
            .text-input
                i.fa.fa-pencil
                input(type="text" name="license" placeholder="شماره پروانه بهره برداری" required)
            .upload-area عکس پروانه بهره برداری چاه
                i.fa.fa-cloud-upload
                input.file(type="file" name="myFile")
            
            input.submit(type="submit" value="آپلود")
