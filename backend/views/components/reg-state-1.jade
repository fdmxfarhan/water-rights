-if(user.role == 'آب منطقه‌ای'){
    -var chahs = accounts.filter(e => e.type == 'chah');
    -var index = chahs.map(e => e.ownerID).indexOf(users[i]._id.toString());
    -if(index != -1){
        -var chah  = chahs[index]
        h1.chah-title اطلاعات حساب چاه
        .state-chah-info
            .info.two-part
                .part
                    .item 
                        .name شماره پروانه: 
                        .value= chah.license
                    .item 
                        .name اجازه برداشت سالیانه:
                        .value= chah.permitedUseInYear
                    .item 
                        .name آب دهی مجاز:
                        .value= chah.permitedAbdehi
                    .item 
                        .name ساعت کارکرد مجاز:
                        .value= chah.permitedWorkTime
                    .item 
                        .name UTM: 
                        .value= chah.UTM
                    .item 
                        .name نوع بهره‌برداری: 
                        .value= chah.useType
                    .item 
                        .name نوع پمپ: 
                        .value= chah.pomp
                .part
                    .item 
                        .name WellCap: 
                        .value= chah.wellCap
                    .item 
                        .name SellCap: 
                        .value= chah.sellCap
                    .item 
                        .name BuyCap: 
                        .value= chah.buyCap
                    .item 
                        .name عمق چاه: 
                        .value= chah.depth
                    .item 
                        .name توان چاه: 
                        .value= chah.power
                    .item 
                        .name آبدهی چاه: 
                        .value= chah.abdehi
                    .item 
                        .name نوع کشت: 
                        .value= chah.farmingType
                    .item 
                        .name مساحت زمین: 
                        .value= chah.area
            .picture 
                a(href="#{chah.licensePic}" download) 
                    img(src="#{chah.licensePic}", alt="")
                    .download 
                        i.fa.fa-cloud-download
        p کارشناس محترم، لطفا تایید بفرمایید که طی 24 ساعت گذشته، بهره بردار فروشنده کارت خود را در کنتور قرار داده و آخرین اطلاعات شارژ بروزرسانی شده است.
        form(action="/abmantaghei/confirm-charge" method="POST")
            .two-side-form
                .part
                    .comment 
                        label(for="comment") نظر کارشناس:
                        textarea#comment(name="comment" placeholder="نظر خود را بنویسید...")
                .part
                    .normal-text-input
                        label(for="charge") شارژ فعلی حساب چاه:
                        input(type="number" name="charge" placeholder="شارژ فعلی حساب چاه")
                    .buttons 
                        button.times(type="submit" name="confirm" value="false")
                            i.fa.fa-times
                            | عدم تایید
                        button.check(type="submit" name="confirm" value="true")
                            i.fa.fa-check
                            | تایید
    -} else {
        .access-denied 
            h1 
                i.fa.fa-warning
                | حساب چاه یافت نشد
    -}
-}else{
    .access-denied 
        h1 
            i.fa.fa-warning
            | نیازمند تایید کارشناس آب منطقه‌ای
        p جهت ادامه فرایند، باید وضعیت شارژ و اعتبار بهره‌برداران توسط کارشناس آب منطقه‌ای تایید گردد.
-}
