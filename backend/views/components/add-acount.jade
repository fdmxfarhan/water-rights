.popup#add-abvandi-popup
    i.fa.fa-times.close-popup
    h1.popup-title افزودن حساب آب‌وندی
    form(action="/dashboard/add-acount" method="POST") 
        input.hidden(type="text" name="userID" value="#{viewingUser._id}")
        .two-column
            .column
                .label تاریخ آغاز
                .date-input
                    input(type="number" name="startDay" placeholder="روز")
                    | /
                    input(type="number" name="startMonth" placeholder="ماه")
                    | /
                    input(type="number" name="startYear" placeholder="سال")
            .column
                .label تاریخ پایان
                .date-input
                    input(type="number" name="endDay" placeholder="روز")
                    | /
                    input(type="number" name="endMonth" placeholder="ماه")
                    | /
                    input(type="number" name="endYear" placeholder="سال")
            button.submit(type="submit")
                i.fa.fa-save 
                | ثبت 

