extends layout

block styles
    link(rel="stylesheet", href="/css/dashboard/dashboard.css")
    link(rel="stylesheet", href="/css/components/register.css")
    link(rel="stylesheet", href="/css/components/sms.css")

block content
    .message-area
        -if(login){
            .success-msg
                i.fa.fa-times.close-success-msg
                ul 
                    li به پنل کاربری خود خوش آمدید
        -}
    .cards-view 
        a.card.blue(href="/dashboard/users")
            i.fa.fa-user 
            h1.number= users.length
            .progress-bar
                .passed(style="width: #{Math.floor((users.length/100)*100) < 100 ? Math.floor((users.length/100)*100) : 100}%")
            h1.title کاربران
        a.card.green(href="/dashboard/accounts")
            i.fa.fa-credit-card
            h1.number= accounts.length
            .progress-bar
                .passed(style="width: #{Math.floor((accounts.length/100)*100) < 100 ? Math.floor((accounts.length/100)*100) : 100}%")
            h1.title حساب ها
        a.card.orange(href="#")
            i.fa.fa-dollar
            h1.number #{Math.floor(mirab.charge*10)/10} 
                .cm متر مکعب
            .progress-bar
                .passed(style="width: #{Math.floor((mirab.charge/sumCharge)*100) < 100 ? Math.floor((mirab.charge/sumCharge)*100) : 100}%")
            h1.title حساب میراب
        a.card.red(href="#")
            i.fa.fa-dollar
            h1.number #{Math.floor(abkhan.charge*10)/10} 
                .cm متر مکعب
            .progress-bar
                .passed(style="width: #{Math.floor((abkhan.charge/sumCharge)*100) < 100 ? Math.floor((abkhan.charge/sumCharge)*100) : 100}%")
            h1.title حساب آبخوان
    
    .title-view 
        h1 داشبورد
        h2 11
    .content-view 
        .users-view 
            .filters 
                .check-input
                    input.check(type="checkbox" id="filter1")
                    label(for="filter1") نیازمند بررسی
                .check-input
                    input.check(type="checkbox" id="filter2")
                    label(for="filter2") تکمیل شده
                .check-input
                    input.check(type="checkbox" id="filter3")
                    label(for="filter3") ناقص
                .check-input
                    input.check(type="checkbox" id="filter4")
                    label(for="filter4") مالک چاه
                .search-view 
                    input.search(type="text" id="search-text")
                    .search-button
                        i.fa.fa-search
                .add-user-btn 
                    i.fa.fa-plus 
                    | ثبت درخواست
            .users-list 
                table 
                    tr 
                        th کاربر
                        th وضعیت
                        th پیام ها
                    -for(var i=0; i<users.length; i++){
                        -if(users[i].role == 'user'){
                            tr.btn(id="user-btn-#{i}") 
                                td
                                    h1= users[i].fullname
                                    a.phone(href="tel:#{users[i].phone}")= users[i].phone
                                td.status
                                    .state(class="#{users[i].regStatusNum > 0 ? 'active' : ''}")
                                        i.fa.fa-check 
                                        .text ثبت درخواست
                                    .line
                                    .state(class="#{users[i].regStatusNum > 1 ? 'active' : ''}")
                                        i.fa.fa-check 
                                        .text بررسی وضعیت شارژ و اعتبار بهره‌برداران
                                    .line
                                    .state(class="#{users[i].regStatusNum > 2 ? 'active' : ''}")
                                        i.fa.fa-check 
                                        .text بررسی وضعیت فنی پرونده چاه
                                    .line
                                    .state(class="#{users[i].regStatusNum > 3 ? 'active' : ''}")
                                        i.fa.fa-check 
                                        .text اصلاح نام پرونده
                                    .line
                                    .state(class="#{users[i].regStatusNum > 4 ? 'active' : ''}")
                                        i.fa.fa-check 
                                        .text تعهد نامه نمایندگی در فروش
                                td 
                                    -if(users[i].messages.length > 0)
                                        i.fa.fa-envelope.message
                        -}
                    -}
        .user-control
            .control 
                h1.title
                    i.fa.fa-envelope.env
                    | اعلان ها
                    i.fa.fa-circle.bubble
                .notifications
                    .notif
                        .text وضعیت فنی کنتور برای 
                            .link کاربر آزمایشی 
                            | توسط تشکل آب بران تایید شد.
                        .date 1400/5/1
                    .notif
                        .text وضعیت شارژ و اعتبار بهره‌برداران برای 
                            .link کاربر آزمایشی 
                            | سازمان آب منطقه‌ای تایید شد.
                        .date 1400/5/1
                    .notif
                        .text درخواست کالیبراسیون (به روز رسانی کنتور) برای 
                            .link کاربر آزمایشی 
                            | توسط تشکل آب‌بران ثبت شد و در انتظار تایید می‌باشد.
                        .date 1400/5/1
                .notifications.seen.hidden
                    .notif.seen
                        .text وضعیت فنی کنتور برای 
                            .link کاربر آزمایشی 
                            | توسط تشکل آب بران تایید شد.
                        .date 1400/5/1
                        i.fa.fa-check.check
                        i.fa.fa-check.check2
                    .notif.seen
                        .text وضعیت شارژ و اعتبار بهره‌برداران برای 
                            .link کاربر آزمایشی 
                            | سازمان آب منطقه‌ای تایید شد.
                        .date 1400/5/1
                        i.fa.fa-check.check
                        i.fa.fa-check.check2
                    .notif.seen
                        .text درخواست کالیبراسیون (به روز رسانی کنتور) برای 
                            .link کاربر آزمایشی 
                            | توسط تشکل آب‌بران ثبت شد و در انتظار تایید می‌باشد.
                        .date 1400/5/1
                        i.fa.fa-check.check
                        i.fa.fa-check.check2
                    
                .more-notif-btn مشاهده پیام های خوانده شده
    include register
    include ../components/users-popups
    include ../components/sms
    script(src="/js/kargozar.js") 
