-if(user.role == 'آب منطقه‌ای'){
    -var chahs = accounts.filter(e => e.type == 'chah');
    -var index = chahs.map(e => e.ownerID).indexOf(users[i]._id.toString());
    -if(index != -1){
        -var chah  = chahs[index]
        h1.chah-title اطلاعات حساب چاه
        .state-chah-info
            .info.two-part
                .part
                    .item 
                        .name شماره پروانه: 
                        .value= chah.license
                    .item 
                        .name اجازه برداشت سالیانه:
                        .value= chah.permitedUseInYear
                    .item 
                        .name آب دهی مجاز:
                        .value= chah.permitedAbdehi
                    .item 
                        .name ساعت کارکرد مجاز:
                        .value= chah.permitedWorkTime
                    .item 
                        .name UTM: 
                        .value= chah.UTM
                    .item 
                        .name نوع بهره‌برداری: 
                        .value= chah.useType
                    .item 
                        .name نوع پمپ: 
                        .value= chah.pomp
                .part
                    .item 
                        .name WellCap: 
                        .value= chah.wellCap
                    .item 
                        .name SellCap: 
                        .value= chah.sellCap
                    .item 
                        .name BuyCap: 
                        .value= chah.buyCap
                    .item 
                        .name عمق چاه: 
                        .value= chah.depth
                    .item 
                        .name توان چاه: 
                        .value= chah.power
                    .item 
                        .name آبدهی چاه: 
                        .value= chah.abdehi
                    .item 
                        .name نوع کشت: 
                        .value= chah.farmingType
                    .item 
                        .name مساحت زمین: 
                        .value= chah.area
            .picture 
                a(href="#{chah.licensePic}" download) 
                    img(src="#{chah.licensePic}", alt="")
                    .download 
                        i.fa.fa-cloud-download
        p کارشناس محترم، لطفا تایید بفرمایید که پروانه بهره‌برداری حساب چاه، معتبر بوده و کنتور کالیبره می‌باشد. در صورت کالیبره نبودن کنتور به تشکل آب بران اطلاع داده خواهد شد و پس از دریافت گواهی صحت عملکرد کنتور مجددا به شما اطلاع داده خواهد شد.
        form(action="/abmantaghei/confirm-technical" method="POST")
            input.hidden(type="text" name="userID" value="#{users[i]._id}")
            input.hidden(type="text" name="owner" value="#{users[i].fullname}")
            input.hidden(type="text" name="userIndex" value="#{i}")
            input.hidden(type="text" name="chahID" value="#{chah._id}")
            .two-side-form
                .part
                    .comment 
                        label(for="comment") نظر کارشناس:
                        textarea#comment(name="comment" placeholder="نظر خود را بنویسید...")
                .part
                    //- .normal-text-input
                    //-     label(for="charge") شارژ فعلی حساب چاه:
                    //-     input(type="number" name="charge" placeholder="شارژ فعلی حساب چاه")
                    .check-input-view 
                        input(type="checkbox" name="licenseConfirmed" id="licenseConfirmed")
                        label(for="licenseConfirmed") پروانه بهره‌برداری معتبر می‌باشد
                    .check-input-view 
                        input(type="checkbox" name="counterConfirmed" id="counterConfirmed")
                        label(for="counterConfirmed") کنتور کالیبره است
                    
                    .buttons 
                        button.submit.left(type="submit" name="confirm" value="true")
                            i.fa.fa-save
                            | ثبت
    -} else {
        .access-denied 
            h1 
                i.fa.fa-warning
                | حساب چاه یافت نشد
    -}
